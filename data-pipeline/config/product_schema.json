{
  "type": "object",
  "required": ["code", "product_name", "ingredients_text"],
  "properties": {
    "code": {
      "type": "string",
      "pattern": "^[0-9]{8,14}$",
      "description": "Code-barres GTIN"
    },
    "product_name": {
      "type": "string",
      "minLength": 2,
      "maxLength": 500
    },
    "ingredients_text": {
      "type": "string",
      "minLength": 5
    },
    "categories": {
      "type": "string"
    },
    "allergens": {
      "type": "string"
    },
    "labels": {
      "type": "string"
    },
    "packaging": {
      "type": "string"
    },
    "origins": {
      "type": "string"
    },
    "nutriscore_grade": {
      "type": "string",
      "enum": ["a", "b", "c", "d", "e", "unknown"]
    },
    "ecoscore_grade": {
      "type": "string",
      "enum": ["a", "b", "c", "d", "e", "unknown"]
    }
  }
}

